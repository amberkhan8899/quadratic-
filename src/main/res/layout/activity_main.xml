<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quadratic Equation"
        android:textStyle="bold"
        android:textSize="14pt"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/NumA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView1"
        android:hint="Enter value for a"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/NumB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/NumA"
        android:hint="Enter value for b"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/NumC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/NumB"
        android:hint="Enter value for c"
        android:inputType="number"
        />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/NumC"
        android:text="Result1"
        android:textSize="12pt"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/TextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/NumC"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/TextView2"
        android:text="Result2"
        android:textSize="12pt"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/B1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView2"
        android:layout_marginTop="20dp"
        android:onClick="OnButtonClick"
        android:text="Calculate root"
        android:textSize="10pt"
        />




</RelativeLayout>